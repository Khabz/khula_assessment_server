{
	"name": "khula_assessment_server",
	"version": "1.0.0",
	"private": true,
	"author": {
		"name": "Khabubu Ndivhuwo",
		"email": "khabubundivhu@gmail.com"
	},
	"scripts": {
		"dev": "nodemon --exec ts-node src/server.ts",
		"build-ts": "tsc --build tsconfig.json",
		"build": "yarn run remove-dist && yarn run build-ts",
		"start": "node dist/server.js",
		"lint": "eslint src/ --ext .js,.ts && yarn run build-ts",
		"remove-dist": "rm -fr dist/*",
		"env": "node ./scripts/env-modify.js",
		"watch-test": "yarn run test -- --watchAll",
		"lint-staged": "prettier --config ./.prettierrc.json --check **/*.{js,ts}"
	},
	"husky": {
		"hooks": {
			"pre-push": "npm run lint-staged && npm run lint && npm run test && git add ."
		}
	},
	"lint-staged": {
		"*.{js,json,css,md}": [
			"prettier --single-quote --write"
		]
	},
	"dependencies": {
		"@types/express": "^4.17.11",
		"@types/uuid": "^8.3.0",
		"@types/validator": "^13.1.3",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"ejs": "^3.1.5",
		"express": "~4.16.1",
		"helmet": "^4.3.1",
		"mariadb": "^2.5.2",
		"morgan": "~1.9.1",
		"sequelize": "^6.5.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/compression": "^1.7.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.10",
		"@types/ejs": "^3.0.5",
		"@types/helmet": "^4.0.0",
		"@types/jest": "^26.0.20",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/morgan": "^1.9.2",
		"@types/node": "^14.14.22",
		"@types/sequelize": "^4.28.9",
		"@types/shelljs": "^0.8.8",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"depcheck": "^1.3.1",
		"eslint": "^7.22.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-prettier": "^8.1.0",
		"eslint-formatter-pretty": "^4.0.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.3.1",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^4.3.1",
		"husky": "^4.3.5",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.3",
		"nodemon": "^2.0.6",
		"prettier": "^2.2.1",
		"shelljs": "^0.8.4",
		"supertest": "^6.0.1",
		"ts-jest": "^26.5.2",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3"
	}
}